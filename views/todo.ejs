<%- include('partials/header', {titulo: info.titulo}); %>
<%- include('partials/navbar', {userData}); %>

    <div class="d-flex justify-content-center mt-4  ">
      <h2 class="display-4 text-white animate__animated animate__bounceIn">Seguimiento de articulos</h2>
    </div>
    <div class="row p-4">
      <div class="offset-md-2 col-md-8 col-12">
        <div class="card p-4 ">
          <div class="d-flex justify-content-center">
            <p>Ultima actualizacion: <span id="fechaLU"><%= info.fecha %></span></p>
          </div>
          <table id="todo-table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Codigo</th>
                <th>Liquidado</th>
                <th>Tipo articulo</th>
                <!-- <th>Obs</th> -->
              </tr>
            </thead>
            <tbody>
              <% if(info.items.length > 0) { %>
                <% for(var i = 0; i < info.items.length; i++) { %>
                  <tr>
                    <td><%= info.items[i].codigo %></td>
                    <% if(!info.items[i].liquidado) { %>
                      <td>Pendiente</td>
                    <% }  %>
                    <% if(info.items[i].liquidado) { %>
                      <td>Aprobado</td>
                    <% }  %>
                    <td><%= info.items[i].tipoArticulo %></td>
                    <!-- <td><%= info.items[i].observacion %></td> -->
                  </tr>
                <% } %>  
              <% } %>                      


            </tbody>
          </table>
     
        </div>

      </div>
      <!-- <div class="col-5">
        <form>
          <input type="text" name="item" placeholder="Add new item..." required />
          <button type="submit">Add Item</button>
      </form>
      </div> -->
    </div>
<%- include('partials/footer'); %>
