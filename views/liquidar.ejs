<%- include('partials/header', {titulo: 'Liquidacion'}); %>
<%- include('partials/navbar', {userData}); %>

<div id="liquidarFlag">
    <div class="row">
        <div class="offset-md-3 col-md-5 col-12">
          <h2 class="display-4 text-white animate__bounceIn text-center">Calcular liquidacion</h2>
            <div class="card bg-white p-4">
                <span text-center><strong>Info gral</strong></span>
                <pre>
Articulos especiales: <%= data.especial %>
Articulos normales: <%= data.normal %>
Total articulos liquidados: <%= data.liquidado %>
</pre>
                <fieldset >
                    <input id="espCant" type="hidden" value="<%= data.especial %>">
                    <input id="normCant" type="hidden" value="<%= data.normal %>">
                    <div class="form-group">
                      <label for="cantidad">Cantidad a liquidar</label>
                      <input type="number" maxlength="1000" minlength="1" min="1" max="1000" id="cantidad" value="0" class="form-control">
                    </div>
                    <div class="form-group">
                      <label for="select">Tipo de articulo</label>
                      <select id="select" class="form-control">
                        <option>Todos</option>
                        <option>Especial</option>
                      </select>
                    </div>
                    <!-- <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="check">
                        <label class="form-check-label" for="disabledFieldsetCheck">
                          Calcular todo
                        </label>
                    </div> -->
                    <!-- <button class="btn btn-primary mt-2" id="calcular">Calcular</button> -->
                    <!-- Button trigger modal -->
                    <% 
                      let lenArts = (data.especial + data.normal ); 
                      if ( lenArts != 0 ) {
                    %>
                      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        Calcular
                      </button>

                    <% } %>
                  </fieldset>
            </div>
        </div>
        <div class="col-md-3 col-12 p-0 mt-3">
            <p class="display-4 mx-3" style="font-size: 2rem;">Liquidaciones</p>
            
            <div class="col-12" id="liquidaciones">
              <div class="card" id="spinner">
                  <div class="d-flex justify-content-center">
                    <div class="spinner-border m-4" role="status">
                    <span class="sr-only">Loading...</span>
                  </div>                   
              </div>                                 
            </div>
            </div>

        </div> 
    </div>
</div>


<!-- Modal -->
<div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">        
        <h5 class="modal-title" id="exampleModalLabel">Liquidacion al dia <span id="fecha"></span></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>      
      <div id="notificaciones">
      </div>   
      <div class="modal-body pb-0" id="imprimir">      
        <%         
          if ( lenArts != 0 ) {
        %>
          <table class="table table-sm m-0">
            <thead class="thead-dark">
              <tr>
                <th>Total Articulos</th>
                <th>Tipo</th>
                <th>Precio</th>
                <th>Sub Total</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><span id="cantEspecial"></span></td>
                <td>Editados(especial)</td>
                <td>$10</td>
                <td><span id="subEsp"></span></td>
              </tr>
              <tr>
                <td><span id="cantNormal"></span></td>
                <td>Normal</td>
                <td>$5</td>
                <td><span id="subNormal"></span></td>
              </tr>            
            </tbody>
          </table>
        <% } else { %>        
          <div class="d-flex justify-content-center">
            <p>Estas al dia</p>
          </div>  
        <% } %>        
        <div class="row">
          <div class="offset-md-9 col-2 offset-9">
            <p class="p-1"> Total $<span id="total"></span></p>
          </div>
        </div>
      </div>
      <div class="modal-footer">   
        <% if( lenArts != 0 ) { %>        
          <button type="button" id="btnSave" class="btn btn-success">Guardar</button>
          <button type="button" id="btnPrint" class="btn btn-primary">Imprimir</button>
        <% } %>          
      </div>

    </div>
  </div>
</div>

<%- include('partials/footer'); %>
